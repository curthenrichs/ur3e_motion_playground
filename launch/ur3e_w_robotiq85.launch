<launch>

    <!-- Arguements -->
    <arg name="robot_ip"/>
    <arg name="run_driver" default="false"/>
    <arg name="kinematics_config" default="$(find ur3e_real_time_motion_playground)/description/calibration/ur3e.yaml"/>

    <!-- Robot Description -->
    <param name="gripper_description" command="xacro  '$(find robotiq_85_description)/urdf/robotiq_85_gripper_non_root.xacro'" />
    <param name="robot_description"   command="xacro  '$(find ur_description)/urdf/ur3e.xacro'"/>
    <param name="robot_description_semantic" textfile="$(find ur3e_moveit_config)/config/ur3e.srdf" />

    <group ns="robot_description_planning">
        <rosparam command="load" file="$(find ur3e_moveit_config)/config/joint_limits.yaml"/>
    </group>

    <group ns="robot_description_kinematics">
        <rosparam command="load" file="$(find ur3e_moveit_config)/config/kinematics.yaml"/>
    </group>

    <!-- Load UR UR3e Arm & Robotiq 85 Gripper driver -->
    <group if="$(arg run_driver)">
        <include file="$(find ur_robot_driver)/launch/ur_control.launch">
            <arg name="debug" value="false"/>
            <arg name="use_tool_communication" value="true"/>
            <arg name="controller_config_file" value="$(find ur_robot_driver)/config/ur3e_controllers.yaml"/>
            <arg name="robot_ip" value="$(arg robot_ip)"/>
            <arg name="reverse_ip" value=""/>
            <arg name="reverse_port" value="50001"/>
            <arg name="script_sender_port" value="50002"/>
            <arg name="trajectory_port" value="50003"/>
            <arg name="kinematics_config" value="$(arg kinematics_config)"/>
            <arg name="tf_prefix" value=""/>
            <arg name="controllers" value="joint_state_controller scaled_pos_joint_traj_controller speed_scaling_state_controller force_torque_sensor_controller"/>
            <arg name="stopped_controllers" value="pos_joint_traj_controller joint_group_vel_controller"/>
            <arg name="headless_mode" value="false"/>
            <arg name="tool_voltage" value="24"/>
            <arg name="tool_parity" value="0"/>
            <arg name="tool_baud_rate" value="115200"/>
            <arg name="tool_stop_bits" value="1"/>
            <arg name="tool_rx_idle_chars" value="1.5"/>
            <arg name="tool_tx_idle_chars" value="3.5"/>
            <arg name="tool_device_name" value="/tmp/ttyUR"/>
            <arg name="tool_tcp_port" value="54321"/>
        </include>
        
        <node pkg="robotiq_85_driver" type="robotiq_85_driver_remote_serial" name="robotiq_85_driver" respawn="true" output="screen">
            <param name="num_grippers" value="1" />
            <param name="comport" value="/tmp/ttyUR" />
            <param name="baud" value="115200" />
        </node>
    </group>

    <!-- Given the published joint states, publish tf for the robot links -->
    <node name="joint_mux" pkg="ur3e_real_time_motion_playground" type="joint_mux.py" output="screen"/>

    <node name="robot_joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <rosparam param="/source_list">[joint_mux/output_arm]</rosparam>
    </node>

    <node name="gripper_joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <remap from="robot_description" to="gripper_description"/>
        <remap from="joint_states" to="gripper_full_joint_state"/>
        <rosparam param="source_list">[joint_mux/output_gripper]</rosparam>
    </node>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen">
        <param name="publish_frequency" type="double" value="100.0" />
        <param name="tf_prefix" value=""/>
    </node>

    <node name="gripper_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" >
        <remap from="robot_description" to="gripper_description"/>
        <param name="publish_frequency" type="double" value="100.0" />
        <param name="tf_prefix" value=""/>
        <remap from="joint_states" to="gripper_full_joint_state"/>
    </node>

    <node name="arm_to_gripper_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 1 ee_link gripper_root_link 100"/>

    <node name="world_to_arm_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 1 world base 100"/>

</launch>